<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="caio">
        <createTable tableName="tb_agenda">
            <column name="pk_id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="hostname" type="varchar(45)">
                <constraints nullable="false" />
            </column>
            <column name="comando" type="varchar(6)">
                <constraints nullable="false" />
            </column>          
          <column name="data" type="timestamp ">
              <constraints nullable="false" />
          </column>
          <column name="repetir" type="boolean">
              <constraints nullable="false" />
          </column>
        </createTable>
    </changeSet>

    <changeSet id="00000000000000" author="caio" dbms="postgresql">
        <createSequence sequenceName="hibernate_sequence" startValue="1000" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>
